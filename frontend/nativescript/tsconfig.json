{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2017",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "nodes_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "baseUrl": "..",
        "paths": {
            "~/*": [
                "src/*"
            ],
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
      "nativescript/src/tests/**/*.ts",
      "nativescript/src/**/*.ios.ts",
      "nativescript/src/**/*.android.ts"
    ],
    "files": [
      "./src/main.ts",
      "./references.d.ts"
    ],
    "exclude": [
        "node_modules",
        "platforms",
        "e2e"
    ]
}
